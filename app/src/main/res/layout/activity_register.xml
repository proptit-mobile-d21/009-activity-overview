<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_full_name"
        android:layout_alignStart="@+id/tv_email"
        android:text="Register"
        android:layout_marginBottom="30dp"
        android:textSize="42dp"
        android:textColor="#03A9F4"

        />
    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_full_name"
        android:layout_alignStart="@+id/et_email"
        android:layout_marginBottom="5dp"
        android:textColor="#03A9F4"
        android:text="Full Name" />

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/tv_email"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/corner_background"
        android:paddingHorizontal="10dp" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_email"
        android:layout_centerInParent="true"

        android:layout_marginBottom="5dp"
        android:textColor="#03A9F4"
        android:text="Email" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_email"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/corner_background" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#03A9F4"
        android:text="Password" />
    <EditText
        android:id="@+id/et_password"
        android:layout_below="@id/tv_password"
        android:layout_width="match_parent"
        android:background="@drawable/corner_background"
        android:layout_marginHorizontal="50dp"
        android:paddingHorizontal="10dp"
        android:layout_height="50dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tv_newHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Member?"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_newHere"
        android:layout_alignBottom="@+id/tv_newHere"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="42dp"
        android:paddingVertical="16dp"
        android:text="Register"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_background"
        />





</RelativeLayout>