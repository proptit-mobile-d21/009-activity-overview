<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitStart"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/footer_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitEnd"/>

    <TextView
        android:id="@+id/login_header_txt"
        android:layout_width="338dp"
        android:layout_height="67dp"
        android:layout_marginTop="278dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/text_header_1"
        android:text="@string/login"/>

    <TextView
        android:id="@+id/register_email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_header_txt"
        app:layout_constraintLeft_toLeftOf="@id/login_header_txt"
        style="@style/text_normal"
        android:text="@string/email" />
    
    <EditText
        android:id="@+id/login_email_edit"
        android:layout_width="309dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/register_email_txt"
        app:layout_constraintLeft_toLeftOf="@id/register_email_txt"
        android:background="@drawable/rounded_edit_text"
        android:paddingHorizontal="12dp"
        tools:text="lordierclaw@gmail.com"/>
    
    <TextView
        android:id="@+id/login_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_email_edit"
        app:layout_constraintLeft_toLeftOf="@id/login_email_edit"
        android:layout_marginTop="18dp"
        style="@style/text_normal"
        android:text="@string/password"/>

    <EditText
        android:id="@+id/login_password_edit"
        android:layout_width="309dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_password_txt"
        app:layout_constraintLeft_toLeftOf="@id/login_password_txt"
        android:background="@drawable/rounded_edit_text"
        android:paddingHorizontal="12dp"
        android:inputType="textPassword"
        tools:text="lordierclaw@gmail.com"/>
    
    <TextView
        android:id="@+id/login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_password_edit"
        app:layout_constraintRight_toRightOf="@id/login_password_edit"
        android:layout_marginTop="14dp"
        style="@style/text_normal"
        android:textStyle="bold"
        android:text="@string/forgot_password"/>
    
    <TextView
        android:id="@+id/login_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        style="@style/text_normal"
        android:textColor="@color/white"
        android:text="@string/new_here"/>
    
    <TextView
        android:id="@+id/login_btn"
        android:layout_width="144dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        style="@style/button_primary"
        android:text="@string/login"/>

</androidx.constraintlayout.widget.ConstraintLayout>