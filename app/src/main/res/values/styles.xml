<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bodyRegularWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyBoldWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyBlue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="header">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="box">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/round_box_blue</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>